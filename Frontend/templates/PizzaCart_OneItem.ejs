<div class = "pizza-order">
    <div style = "display: inline-block">
        <div class = "pizza-name"><%= pizza.title %> (
            <%if(size === "small_size") {%>
            <%= "Мала"%>
            <%} else {%>
            <%= "Велика"%>
            <%}%>
            )</div>
        <div style = "padding-left:5px">
            <img style = "width:8px" src = "assets/images/size-icon.svg">
            30
            <img style="width: 8px" src = "assets/images/weight.svg">
            480
        </div>
        <div style = " padding-left:5px;padding-top: 10px">
            <span class = "pizza-price"><%= pizza[size].price*quantity %> грн.</span>
            <button class = "btn btn-danger minus">-</button>
            <span style ="padding: 3px 10px 0 10px"><%= quantity %></span>
            <button class = "btn btn-success plus">+</button>
            <button class = "btn btn-default delete">x</button>
        </div>
    </div>
    <img class = "pizza-icon" src = <%= pizza.icon%>>
</div>